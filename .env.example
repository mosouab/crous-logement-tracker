# Telegram bot credentials (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Comma-separated city names to monitor (case-insensitive, matched against address)
LOCATIONS=Evry,Paris

# How often to poll the website (in minutes)
CHECK_INTERVAL_MINUTES=10

# Optional: filter by max rent in euros (leave empty for no limit)
MAX_PRICE=

# Whether to use saved login cookies (true = logged-in mode, false = anonymous)
# Set to true after running: python main.py --login
USE_AUTH=false

# ── Heroku deployment ──────────────────────────────────────────────────────────
# Required to persist state.json and cookies.json across dyno restarts.
# Get your API key from: https://dashboard.heroku.com/account
HEROKU_API_KEY=
HEROKU_APP_NAME=your-app-name

# Password to protect the web UI (required when deployed publicly)
WEB_PASSWORD=choose_a_strong_password
